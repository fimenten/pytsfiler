# PyTSFiler Client Configuration Template
# Copy this file to .env and update with your values

# === Authentication Settings ===
# Email and password for TSF server authentication
PYTSFILER_EMAIL=your-email@example.com
PYTSFILER_PASSWORD=your-password

# === Server Configuration ===
# Base URL of the TSF server (include https://)
PYTSFILER_BASE_URL=https://localhost:3000

# SSL verification (set to false for self-signed certificates)
PYTSFILER_VERIFY_SSL=false

# === Upload Settings ===
# Direct upload token (optional - only needed for token-based uploads)
PYTSFILER_UPLOAD_TOKEN=your-upload-token-here

# Default chunk size for file operations (bytes)
PYTSFILER_CHUNK_SIZE=8192

# Request timeout in seconds
PYTSFILER_TIMEOUT=30

# === Retry Configuration ===
# Number of retry attempts for failed requests
PYTSFILER_RETRY_LIMIT=3

# Delay between retries (seconds)
PYTSFILER_RETRY_DELAY=1

# === Logging Configuration ===
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
PYTSFILER_LOG_LEVEL=INFO

# Log file path (optional - defaults to console output)
# PYTSFILER_LOG_FILE=/path/to/logfile.log

# === Advanced Settings ===
# Maximum file size for single upload (bytes) - default 100MB
PYTSFILER_MAX_FILE_SIZE=104857600

# Enable progress tracking for uploads/downloads
PYTSFILER_SHOW_PROGRESS=true

# === Development Settings ===
# Enable debug mode (verbose output)
PYTSFILER_DEBUG=false

# Custom CA certificate path (for custom SSL certificates)
# PYTSFILER_CA_CERT_PATH=/path/to/ca-cert.pem